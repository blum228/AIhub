---
/**
 * Основной layout для AIGirlsHub
 * Наследует BaseLayout и добавляет Header/Footer
 */
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogImage?: string;
}

const { 
  title = 'AIGirlsHub — Каталог AI-девушек', 
  description = 'Найди идеальную AI-девушку. Обзоры, рейтинги и сравнения лучших AI-компаньонов.',
  lang = 'ru',
  ogImage = '/images/og/default.jpg'
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site || 'https://aigirlshub.ru');
---

<BaseLayout title={title} lang={lang}>
  <Fragment slot="head">
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.href} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:site_name" content="AIGirlsHub" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <slot name="head" />
  </Fragment>
  
  <Header slot="header" />
  
  <slot />
  
  <Footer slot="footer" />
</BaseLayout>
