---
/**
 * Логотип AIGirlsHub
 * Минималистичный текстовый логотип в стиле IDS
 * @prop size - размер: 'S' | 'M' (default)
 */
import { url } from '../utils/url';

interface Props {
  size?: 'S' | 'M';
  class?: string;
}

const { size = 'M', class: className } = Astro.props;
const classes = ['ids__logo', size !== 'M' && size, className].filter(Boolean).join(' ');
---

<a href={url('/')} class={classes}>
  <span class="ids__logo-text">AI</span><span class="ids__logo-accent">Girls</span><span class="ids__logo-text">Hub</span>
</a>

<style>
  .ids__logo {
    display: inline-flex;
    align-items: baseline;
    font-size: var(--ids__font-size-h3);
    font-weight: var(--ids__font-weight-bold);
    letter-spacing: -0.02em;
    text-decoration: none;
    transition: opacity var(--ids__transition-normal);
  }

  .ids__logo:hover {
    opacity: 0.7;
    text-decoration: none;
  }

  .ids__logo-text {
    color: var(--ids__text-primary);
  }

  .ids__logo-accent {
    color: var(--ids__accent);
  }

  .ids__logo.S {
    font-size: var(--ids__font-size-h4);
  }
</style>
