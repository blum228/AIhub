---
/**
 * Логотип AIGirlsHub
 * Минималистичный текстовый логотип в стиле IDS
 * @prop size - размер: 'S' | 'M' (default)
 */
import { url } from '../utils/url';

interface Props {
  size?: 'S' | 'M';
  class?: string;
}

const { size = 'M', class: className } = Astro.props;
const classes = ['aigh__logo', size !== 'M' && size, className].filter(Boolean).join(' ');
---

<a href={url('/')} class={classes}>
  <span class="aigh__logo-text">AI</span><span class="aigh__logo-accent">Girls</span><span class="aigh__logo-text">Hub</span>
</a>

<style>
  .aigh__logo {
    display: inline-flex;
    align-items: baseline;
    font-size: 1.4em;
    font-weight: 650;
    letter-spacing: -0.02em;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .aigh__logo:hover {
    opacity: 0.7;
    text-decoration: none;
  }

  .aigh__logo-text {
    color: rgb(var(--ids__text-RGB));
  }

  .aigh__logo-accent {
    color: var(--ids__accent);
  }

  .aigh__logo.S {
    font-size: 1.1em;
  }
</style>
