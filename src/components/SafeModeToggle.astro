---
/**
 * SafeModeToggle ‚Äî –ø–µ—Ä–µ–∫–ª—é—á–∞—Ç–µ–ª—å Safe Mode ("–Ø –Ω–∞ —Ä–∞–±–æ—Ç–µ")
 * 
 * Requirements: 4.1, 4.5, 10.1-10.5
 * - –ü–µ—Ä–µ–∫–ª—é—á–∞—Ç–µ–ª—å –≤ —à–∞–ø–∫–µ —Å–∞–π—Ç–∞
 * - –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è –≤ localStorage
 * - –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∫–ª–∞—Å—Å–∞ 'safe-mode' –Ω–∞ body
 */
---

<div class="safe-mode-toggle">
  <label class="safe-mode-toggle__label">
    <input 
      type="checkbox" 
      class="safe-mode-toggle__input" 
      id="safe-mode-checkbox"
      aria-label="–í–∫–ª—é—á–∏—Ç—å –±–µ–∑–æ–ø–∞—Å–Ω—ã–π —Ä–µ–∂–∏–º"
    />
    <span class="safe-mode-toggle__switch">
      <span class="safe-mode-toggle__slider"></span>
    </span>
    <span class="safe-mode-toggle__text">
      <span class="safe-mode-toggle__text-off">üîì</span>
      <span class="safe-mode-toggle__text-on">üîí</span>
    </span>
  </label>
</div>

<style>
  .safe-mode-toggle {
    display: flex;
    align-items: center;
  }

  .safe-mode-toggle__label {
    display: flex;
    align-items: center;
    gap: var(--ids__space-xs);
    cursor: pointer;
    user-select: none;
  }

  .safe-mode-toggle__input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .safe-mode-toggle__switch {
    position: relative;
    width: 2.5em;
    height: 1.4em;
    background: var(--ids__border-strong);
    border-radius: var(--ids__radius-full);
    transition: background var(--ids__transition-fast);
  }

  .safe-mode-toggle__slider {
    position: absolute;
    top: 0.15em;
    left: 0.15em;
    width: 1.1em;
    height: 1.1em;
    background: white;
    border-radius: 50%;
    transition: transform var(--ids__transition-fast);
    box-shadow: var(--ids__shadow-s);
  }

  .safe-mode-toggle__input:checked + .safe-mode-toggle__switch {
    background: var(--ids__success);
  }

  .safe-mode-toggle__input:checked + .safe-mode-toggle__switch .safe-mode-toggle__slider {
    transform: translateX(1.1em);
  }

  .safe-mode-toggle__input:focus-visible + .safe-mode-toggle__switch {
    outline: 2px solid var(--ids__link);
    outline-offset: 2px;
  }

  .safe-mode-toggle__text {
    font-size: var(--ids__font-size-body);
    line-height: 1;
  }

  .safe-mode-toggle__text-on {
    display: none;
  }

  .safe-mode-toggle__input:checked ~ .safe-mode-toggle__text .safe-mode-toggle__text-off {
    display: none;
  }

  .safe-mode-toggle__input:checked ~ .safe-mode-toggle__text .safe-mode-toggle__text-on {
    display: inline;
  }
</style>

<script>
  const STORAGE_KEY = 'aigirlshub_safe_mode';
  const checkbox = document.getElementById('safe-mode-checkbox') as HTMLInputElement;

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–∑ localStorage
  function initSafeMode() {
    try {
      const saved = localStorage.getItem(STORAGE_KEY);
      const isEnabled = saved === 'true';
      
      if (checkbox) {
        checkbox.checked = isEnabled;
      }
      
      if (isEnabled) {
        document.body.classList.add('safe-mode');
      } else {
        document.body.classList.remove('safe-mode');
      }
    } catch (e) {
      // localStorage –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω ‚Äî –∏—Å–ø–æ–ª—å–∑—É–µ–º session state
      console.warn('localStorage unavailable, using session state');
    }
  }

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è
  function handleToggle() {
    const isEnabled = checkbox?.checked ?? false;
    
    if (isEnabled) {
      document.body.classList.add('safe-mode');
    } else {
      document.body.classList.remove('safe-mode');
    }

    try {
      localStorage.setItem(STORAGE_KEY, String(isEnabled));
    } catch (e) {
      console.warn('Could not save to localStorage');
    }
  }

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
  initSafeMode();
  checkbox?.addEventListener('change', handleToggle);
</script>
