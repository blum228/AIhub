---
/**
 * –ö–∞—Ä—Ç–æ—á–∫–∞ AI-–º–æ–¥–µ–ª–∏ —Å –ø—Ä–æ–¥—É–∫—Ç-—Ñ–∏—Ç–æ–º (—Å–º—ã—Å–ª–æ–≤–∞—è —Å–µ–≥–º–µ–Ω—Ç–∞—Ü–∏—è)
 * 
 * –ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç:
 * - –ù–∞–∑–≤–∞–Ω–∏–µ + —Ä–µ–π—Ç–∏–Ω–≥
 * - Tagline (–ø–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ)
 * - "–ò–¥–µ–∞–ª–µ–Ω –¥–ª—è" (2-3 –ø—É–Ω–∫—Ç–∞ –∏–∑ productFit)
 * - –¶–µ–Ω–∞
 * - CTA –∫–Ω–æ–ø–∫–∏
 */
import { url } from '../utils/url';

interface ModelData {
  slug: string;
  name: string;
  logo?: string;
  rating: number;
  pricing: 'free' | 'freemium' | 'paid';
  priceFrom?: number;
  description: string;
  tagline?: string;
  affiliateUrl: string;
  productFit?: {
    idealFor?: string[];
    notFor?: string[];
  };
  motivation?: string;
  formats?: string[];
}

interface Props {
  model: ModelData;
  showCTA?: boolean;
  compact?: boolean;
  class?: string;
}

const { model, showCTA = true, compact = false, class: className } = Astro.props;

// –¶–µ–Ω–∞
const priceLabel = model.pricing === 'free'
  ? '–ë–µ—Å–ø–ª–∞—Ç–Ω–æ'
  : model.priceFrom 
    ? `–æ—Ç $${model.priceFrom}/–º–µ—Å` 
    : 'Freemium';

// –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
const positioning = model.tagline || model.description.slice(0, 60) + '...';

// –ü—Ä–æ–¥—É–∫—Ç-—Ñ–∏—Ç (–±–µ—Ä—ë–º –ø–µ—Ä–≤—ã–µ 2 –ø—É–Ω–∫—Ç–∞)
const idealFor = model.productFit?.idealFor?.slice(0, 2) || [];

// –ò–∫–æ–Ω–∫–∞ –º–æ—Ç–∏–≤–∞—Ü–∏–∏
const motivationIcons: Record<string, string> = {
  intimacy: '‚ù§Ô∏è',
  escapism: 'üé≠',
  connection: 'ü§ù',
};
const motivationIcon = model.motivation ? motivationIcons[model.motivation] || '' : '';

const classes = ['semantic-card', compact && 'semantic-card--compact', className].filter(Boolean).join(' ');
---

<article class={classes}>
  <a href={url(`/models/${model.slug}`)} class="semantic-card__link">
    <!-- Header: Name + Rating -->
    <div class="semantic-card__header">
      <h3 class="semantic-card__name">
        {motivationIcon && <span class="semantic-card__goal-icon">{motivationIcon}</span>}
        {model.name}
      </h3>
      <span class="semantic-card__rating">‚òÖ {model.rating.toFixed(1)}</span>
    </div>

    <!-- Tagline: –∫—Ä–∞—Ç–∫–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ -->
    <p class="semantic-card__tagline">{positioning}</p>

    <!-- Footer: Price -->
    <div class="semantic-card__footer">
      <span class="semantic-card__price" data-pricing={model.pricing}>{priceLabel}</span>
      <span class="semantic-card__arrow">‚Üí</span>
    </div>
  </a>

  <!-- CTA Button -->
  {showCTA && (
    <div class="semantic-card__cta">
      <a href={model.affiliateUrl} class="semantic-card__btn semantic-card__btn--primary" target="_blank" rel="noopener">
        –ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å ‚Üí
      </a>
    </div>
  )}
</article>

<style>
  .semantic-card {
    display: flex;
    flex-direction: column;
    background: var(--ids__bg-surface);
    border: 1px solid var(--ids__border-subtle);
    border-radius: var(--ids__radius-l);
    overflow: hidden;
    transition: 
      transform var(--ids__transition-fast),
      box-shadow var(--ids__transition-fast),
      border-color var(--ids__transition-fast);
  }

  .semantic-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--ids__shadow-l);
    border-color: var(--ids__border-strong);
  }

  .semantic-card__link {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--ids__space-l);
    text-decoration: none;
    color: inherit;
  }

  .semantic-card__link:hover {
    text-decoration: none;
  }

  /* Header */
  .semantic-card__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--ids__space-s);
    margin-bottom: var(--ids__space-s);
  }

  .semantic-card__name {
    margin: 0;
    font-size: var(--ids__font-size-h4);
    font-weight: var(--ids__font-weight-bold);
    color: var(--ids__text-primary);
    line-height: var(--ids__line-height-snug);
    flex: 1;
  }

  .semantic-card__goal-icon {
    margin-right: var(--ids__space-2xs);
  }

  .semantic-card__rating {
    flex-shrink: 0;
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-semibold);
    color: var(--ids__text-secondary);
    white-space: nowrap;
  }

  /* Tagline */
  .semantic-card__tagline {
    margin: var(--ids__space-s) 0 0;
    font-size: var(--ids__font-size-small);
    color: var(--ids__text-secondary);
    line-height: var(--ids__line-height-relaxed);
  }

  /* Footer */
  .semantic-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: var(--ids__space-m);
  }

  .semantic-card__price {
    font-size: var(--ids__font-size-body);
    font-weight: var(--ids__font-weight-semibold);
    color: var(--ids__text-primary);
  }

  .semantic-card__price[data-pricing="free"] {
    color: var(--ids__success);
  }

  .semantic-card__arrow {
    color: var(--ids__text-muted);
    transition: transform var(--ids__transition-fast), color var(--ids__transition-fast);
  }

  .semantic-card:hover .semantic-card__arrow {
    transform: translateX(4px);
    color: var(--ids__accent);
  }

  /* CTA Buttons */
  .semantic-card__cta {
    display: flex;
    gap: var(--ids__space-xs);
    padding: var(--ids__space-m);
    padding-top: 0;
  }

  .semantic-card__btn {
    flex: 1;
    padding: var(--ids__space-s) var(--ids__space-m);
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-semibold);
    text-align: center;
    text-decoration: none;
    border-radius: var(--ids__radius-s);
    transition: 
      background var(--ids__transition-fast),
      color var(--ids__transition-fast);
  }

  .semantic-card__btn--secondary {
    color: var(--ids__text-primary);
    background: var(--ids__bg-page);
  }

  .semantic-card__btn--secondary:hover {
    background: var(--ids__bg-surface-hover);
    text-decoration: none;
  }

  .semantic-card__btn--primary {
    color: var(--ids__bg-page);
    background: var(--ids__accent);
  }

  .semantic-card__btn--primary:hover {
    opacity: 0.9;
    text-decoration: none;
    color: var(--ids__bg-page);
  }

  /* Compact variant */
  .semantic-card--compact .semantic-card__link {
    padding: var(--ids__space-m);
  }

  .semantic-card--compact .semantic-card__cta {
    display: none;
  }
</style>
