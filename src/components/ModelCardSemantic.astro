---
/**
 * –ö–∞—Ä—Ç–æ—á–∫–∞ AI-–º–æ–¥–µ–ª–∏ —Å –ø—Ä–æ–¥—É–∫—Ç-—Ñ–∏—Ç–æ–º (—Å–º—ã—Å–ª–æ–≤–∞—è —Å–µ–≥–º–µ–Ω—Ç–∞—Ü–∏—è)
 * 
 * –ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç:
 * - –ù–∞–∑–≤–∞–Ω–∏–µ + —Ä–µ–π—Ç–∏–Ω–≥
 * - Tagline (–ø–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ)
 * - "–ò–¥–µ–∞–ª–µ–Ω –¥–ª—è" (2-3 –ø—É–Ω–∫—Ç–∞ –∏–∑ productFit)
 * - –¶–µ–Ω–∞
 * - CTA –∫–Ω–æ–ø–∫–∏
 */

interface ModelData {
  slug: string;
  name: string;
  logo?: string;
  rating: number;
  pricing: 'free' | 'freemium' | 'paid';
  priceFrom?: number;
  description: string;
  tagline?: string;
  affiliateUrl: string;
  productFit?: {
    idealFor?: string[];
    notFor?: string[];
  };
  primaryGoal?: string;
}

interface Props {
  model: ModelData;
  showCTA?: boolean;
  compact?: boolean;
  class?: string;
}

const { model, showCTA = true, compact = false, class: className } = Astro.props;

// –¶–µ–Ω–∞
const priceLabel = model.pricing === 'free'
  ? '–ë–µ—Å–ø–ª–∞—Ç–Ω–æ'
  : model.priceFrom 
    ? `–æ—Ç $${model.priceFrom}/–º–µ—Å` 
    : 'Freemium';

// –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
const positioning = model.tagline || model.description.slice(0, 60) + '...';

// –ü—Ä–æ–¥—É–∫—Ç-—Ñ–∏—Ç (–±–µ—Ä—ë–º –ø–µ—Ä–≤—ã–µ 2 –ø—É–Ω–∫—Ç–∞)
const idealFor = model.productFit?.idealFor?.slice(0, 2) || [];

// –ò–∫–æ–Ω–∫–∞ —Ü–µ–ª–∏
const goalIcons: Record<string, string> = {
  flirt: 'üî•',
  roleplay: 'üé≠',
  companion: 'üí¨',
  voice: 'üé§',
  visual: 'üì∏',
  experimental: 'üß™',
};
const goalIcon = model.primaryGoal ? goalIcons[model.primaryGoal] || '' : '';

const classes = ['semantic-card', compact && 'semantic-card--compact', className].filter(Boolean).join(' ');
---

<article class={classes}>
  <a href={`/models/${model.slug}`} class="semantic-card__link">
    <!-- Header: Logo + Name + Rating -->
    <div class="semantic-card__header">
      <div class="semantic-card__logo-wrap">
        {model.logo ? (
          <img src={model.logo} alt="" class="semantic-card__logo" loading="lazy" />
        ) : (
          <span class="semantic-card__logo semantic-card__logo--placeholder">{model.name.charAt(0)}</span>
        )}
      </div>
      <div class="semantic-card__title-group">
        <h3 class="semantic-card__name">
          {goalIcon && <span class="semantic-card__goal-icon">{goalIcon}</span>}
          {model.name}
        </h3>
        <span class="semantic-card__rating">‚òÖ {model.rating.toFixed(1)}</span>
      </div>
    </div>

    <!-- Positioning -->
    <p class="semantic-card__tagline">{positioning}</p>

    <!-- Product Fit -->
    {idealFor.length > 0 && (
      <div class="semantic-card__fit">
        <span class="semantic-card__fit-label">–ò–¥–µ–∞–ª–µ–Ω –¥–ª—è:</span>
        <ul class="semantic-card__fit-list">
          {idealFor.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    )}

    <!-- Footer: Price -->
    <div class="semantic-card__footer">
      <span class="semantic-card__price" data-pricing={model.pricing}>{priceLabel}</span>
      <span class="semantic-card__arrow">‚Üí</span>
    </div>
  </a>

  <!-- CTA Button -->
  {showCTA && (
    <div class="semantic-card__cta">
      <a href={model.affiliateUrl} class="semantic-card__btn semantic-card__btn--primary" target="_blank" rel="noopener">
        –ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å ‚Üí
      </a>
    </div>
  )}
</article>

<style>
