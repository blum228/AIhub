---
/**
 * Контейнер со скруглёнными углами (суперэллипс)
 * @prop radius - радиус скругления (CSS-значение)
 */
interface Props {
  radius?: string;
  class?: string;
}

const { radius, class: className } = Astro.props;
const classes = ['ids__rounded', className].filter(Boolean).join(' ');
const style = radius ? `--ids__radius: ${radius}` : undefined;
---

<div class={classes} style={style}>
  <slot />
</div>
