---
/**
 * Контейнер для анимации появления при скролле
 * Элемент "спит" (имеет класс is-sleeping) пока не появится на экране
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const classes = ['ids__sleepy', 'is-sleeping', className].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>

<script>
  function initSleepy() {
    const sleepyElements = document.querySelectorAll('.ids__sleepy');
    
    if (!sleepyElements.length) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove('is-sleeping');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.3 }
    );

    sleepyElements.forEach((el) => {
      el.classList.add('is-sleeping');
      observer.observe(el);
    });
  }

  document.addEventListener('astro:page-load', initSleepy);
  initSleepy();
</script>
