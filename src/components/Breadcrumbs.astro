---
/**
 * Хлебные крошки с Schema.org разметкой
 * @prop items - массив { label: string, href?: string }
 */
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className } = Astro.props;
const classes = ['ids__breadcrumbs', className].filter(Boolean).join(' ');

// Schema.org BreadcrumbList
const schemaItems = items.map((item, index) => ({
  '@type': 'ListItem',
  position: index + 1,
  name: item.label,
  ...(item.href && { item: new URL(item.href, Astro.site || 'https://aigirlshub.ru').href })
}));

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: schemaItems
};
---

<nav class={classes} aria-label="Навигация">
  <ol class="ids__breadcrumbs-list">
    {items.map((item, index) => (
      <li class="ids__breadcrumbs-item">
        {item.href ? (
          <a href={item.href} class="ids__nav-link">{item.label}</a>
        ) : (
          <span aria-current="page">{item.label}</span>
        )}
        {index < items.length - 1 && (
          <span class="ids__breadcrumbs-sep" aria-hidden="true">→</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

<style>
  .ids__breadcrumbs {
    margin-bottom: var(--ids__space-s);
  }

  .ids__breadcrumbs-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--ids__space-xs);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ids__breadcrumbs-item {
    display: flex;
    align-items: center;
    gap: var(--ids__space-xs);
    margin: 0;
    padding: 0;
  }

  .ids__breadcrumbs-item::before {
    display: none;
  }

  .ids__breadcrumbs-item a {
    font-size: var(--ids__font-size-caption);
  }

  .ids__breadcrumbs-item span[aria-current="page"] {
    font-size: var(--ids__font-size-caption);
    color: var(--ids__text-secondary);
  }

  .ids__breadcrumbs-sep {
    font-size: var(--ids__font-size-micro);
    color: var(--ids__text-muted);
  }
</style>
