---
/**
 * Блок с вердиктом сравнения
 */
interface Props {
  verdict: string;
  winner?: 'a' | 'b' | 'tie';
  modelAName?: string;
  modelBName?: string;
  class?: string;
}

const { verdict, winner, modelAName, modelBName, class: className } = Astro.props;
const classes = ['ids__verdict', className].filter(Boolean).join(' ');

const winnerText = winner === 'a' ? `Победитель: ${modelAName}` 
  : winner === 'b' ? `Победитель: ${modelBName}` 
  : 'Ничья — зависит от ваших целей';
---

<div class={classes}>
  <div class="ids__verdict-header">
    <span class="ids__verdict-icon">⚖️</span>
    <h3 class="ids__verdict-title">Вердикт</h3>
  </div>
  <p class="ids__verdict-text">{verdict}</p>
  {winner && (
    <p class="ids__verdict-winner" data-winner={winner}>{winnerText}</p>
  )}
</div>

<style>
  .ids__verdict {
    padding: var(--ids__space-l);
    background: linear-gradient(135deg, 
      rgba(var(--ids__accent-RGB), 0.08), 
      rgba(var(--ids__accent-RGB), 0.02)
    );
    border-left: 4px solid var(--ids__accent);
    border-radius: 0 var(--ids__radius-s) var(--ids__radius-s) 0;
  }

  .ids__verdict-header {
    display: flex;
    align-items: center;
    gap: var(--ids__space-s);
    margin-bottom: var(--ids__space-s);
  }

  .ids__verdict-icon {
    font-size: var(--ids__font-size-h3);
  }

  .ids__verdict-title {
    margin: 0;
    font-size: var(--ids__font-size-h4);
    font-weight: var(--ids__font-weight-bold);
    color: var(--ids__text-primary);
  }

  .ids__verdict-text {
    margin: 0;
    font-size: var(--ids__font-size-body);
    line-height: var(--ids__line-height-relaxed);
    color: var(--ids__text-primary);
  }

  .ids__verdict-winner {
    margin: var(--ids__space-s) 0 0 0;
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-medium);
    color: var(--ids__text-tertiary);
  }

  .ids__verdict-winner[data-winner="a"],
  .ids__verdict-winner[data-winner="b"] {
    color: var(--ids__accent);
  }
</style>
