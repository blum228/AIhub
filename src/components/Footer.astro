---
/**
 * Подвал сайта AIGirlsHub
 * Минималистичный футер — одна строка
 */
import { url } from '../utils/url';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const year = new Date().getFullYear();

const links = [
  { href: url('/catalog'), label: 'Каталог' },
  { href: url('/compare'), label: 'Сравнения' },
  { href: url('/about'), label: 'О проекте' },
  { href: url('/privacy'), label: 'Политика' },
];
---

<footer class:list={['footer', className]}>
  <div class="footer__inner">
    <nav class="footer__nav">
      {links.map(link => (
        <a href={link.href} class="footer__link ids__nav-link">{link.label}</a>
      ))}
    </nav>
    <div class="footer__meta">
      <span class="footer__copy">© {year} AIGirlsHub</span>
      <span class="footer__age">18+</span>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--ids__space-l);
    padding: var(--ids__space-s) 0;
    border-top: 1px solid var(--ids__border-default);
  }

  .footer__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 70%;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (width < 900px) {
    .footer__inner {
      width: 100%;
      padding: 0 var(--ids__space-s);
      flex-direction: column;
      gap: var(--ids__space-xs);
    }
  }

  @media (width < 500px) {
    .footer__inner {
      padding: 0 var(--ids__space-m);
    }
  }

  .footer__nav {
    display: flex;
    gap: var(--ids__space-l);
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (width < 500px) {
    .footer__nav {
      gap: var(--ids__space-m);
    }
  }

  .footer__link {
    font-size: var(--ids__font-size-small);
  }

  .footer__meta {
    display: flex;
    align-items: center;
    gap: var(--ids__space-m);
  }

  .footer__copy {
    font-size: var(--ids__font-size-caption);
    color: var(--ids__text-muted);
  }

  .footer__age {
    font-size: var(--ids__font-size-micro);
    font-weight: var(--ids__font-weight-semibold);
    padding: var(--ids__space-2xs) var(--ids__space-s);
    color: var(--ids__text-tertiary);
    border: 1px solid var(--ids__border-default);
    border-radius: var(--ids__radius-xs);
  }
</style>
