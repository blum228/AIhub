---
/**
 * Empty state — когда нет результатов
 */
interface Props {
  title?: string;
  description?: string;
  linkHref?: string;
  linkText?: string;
}

const { 
  title = 'Ничего не найдено',
  description = 'Попробуйте изменить параметры поиска',
  linkHref = '/catalog',
  linkText = 'Смотреть все'
} = Astro.props;
---

<div class="empty">
  <div class="empty__icon">∅</div>
  <h3 class="empty__title">{title}</h3>
  <p class="empty__desc">{description}</p>
  {linkHref && (
    <a href={linkHref} class="empty__link">{linkText} →</a>
  )}
</div>

<style>
  .empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--ids__space-3xl) var(--ids__space-xl);
  }

  .empty__icon {
    font-size: var(--ids__font-size-hero-mobile);
    color: var(--ids__text-muted);
    margin-bottom: var(--ids__space-s);
  }

  .empty__title {
    margin: 0 0 var(--ids__space-xs);
    font-size: var(--ids__font-size-h3);
    font-weight: var(--ids__font-weight-bold);
    color: var(--ids__text-secondary);
  }

  .empty__desc {
    margin: 0 0 var(--ids__space-l);
    font-size: var(--ids__font-size-body);
    color: var(--ids__text-tertiary);
    max-width: 20em;
  }

  .empty__link {
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-medium);
    color: var(--ids__accent);
    text-decoration: none;
    transition: opacity var(--ids__transition-fast);
  }

  .empty__link:hover {
    opacity: 0.8;
  }
</style>
