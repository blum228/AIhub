---
/**
 * Единый компонент фильтров для каталога
 * Используется на /catalog и /catalog/[tag]
 */
import Wrapper from './Wrapper.astro';
import { url } from '../utils/url';

interface Props {
  activeFilter?: string;
  totalCount?: number;
}

const { activeFilter = 'all', totalCount } = Astro.props;

// Конфигурация фильтров — единый источник правды
const filters = [
  { slug: 'all', title: 'Все', href: url('/catalog') },
  { slug: 'free', title: 'Бесплатные', href: url('/catalog/free') },
  { slug: 'russian', title: 'На русском', href: url('/catalog/russian') },
  { slug: 'nsfw', title: '18+', href: url('/catalog/nsfw') },
  { slug: 'voice', title: 'С голосом', href: url('/catalog/voice') },
  { slug: 'image-gen', title: 'Генерация фото', href: url('/catalog/image-gen') },
];
---

<div class="filters-bar">
  <Wrapper>
    <nav class="filters" aria-label="Фильтр по категории">
      {filters.map(f => (
        <a 
          href={f.href} 
          class:list={['filter', { 'filter--active': f.slug === activeFilter }]}
          aria-current={f.slug === activeFilter ? 'page' : undefined}
        >
          {f.title}
        </a>
      ))}
    </nav>
    {totalCount !== undefined && (
      <span class="filters-count">{totalCount} сервисов</span>
    )}
  </Wrapper>
</div>

<style>
  .filters-bar {
    margin-top: var(--ids__space-m);
  }

  .filters-bar :global(.ids__wrapper) {
    display: flex;
    align-items: center;
    gap: var(--ids__space-m);
  }

  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: var(--ids__space-xs);
  }

  .filter {
    padding: var(--ids__space-xs) var(--ids__space-m);
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-medium);
    color: var(--ids__text-secondary);
    background: var(--ids__bg-surface);
    border-radius: var(--ids__radius-full);
    text-decoration: none;
    transition: all var(--ids__transition-fast);
  }

  .filter:hover {
    color: var(--ids__text-primary);
    background: var(--ids__bg-surface-hover);
    text-decoration: none;
  }

  .filter--active {
    color: var(--ids__bg-page);
    background: var(--ids__accent);
  }

  .filter--active:hover {
    color: var(--ids__bg-page);
    background: var(--ids__accent);
  }

  .filters-count {
    font-size: var(--ids__font-size-caption);
    color: var(--ids__text-tertiary);
    margin-left: auto;
  }

  @media (width < 600px) {
    .filters-bar :global(.ids__wrapper) {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .filters-count {
      margin-left: 0;
      margin-top: var(--ids__space-xs);
    }
  }
</style>
