---
/**
 * Единый компонент фильтров для каталога
 * Sticky + минималистичный дизайн
 */
import Wrapper from './Wrapper.astro';
import { url } from '../utils/url';

interface Props {
  activeFilter?: string;
  totalCount?: number;
}

const { activeFilter = 'all', totalCount } = Astro.props;

// Конфигурация фильтров
const filters = [
  { slug: 'all', title: 'Все', href: url('/catalog') },
  { slug: 'free', title: 'Бесплатные', href: url('/catalog/free') },
  { slug: 'russian', title: 'Русский', href: url('/catalog/russian') },
  { slug: 'nsfw', title: '18+', href: url('/catalog/nsfw') },
  { slug: 'voice', title: 'Голос', href: url('/catalog/voice') },
  { slug: 'image-gen', title: 'Фото', href: url('/catalog/image-gen') },
];
---

<div class="filters-bar">
  <Wrapper>
    <nav class="filters" aria-label="Фильтр по категории">
      {filters.map(f => (
        <a 
          href={f.href} 
          class:list={['filter', { 'filter--active': f.slug === activeFilter }]}
          aria-current={f.slug === activeFilter ? 'page' : undefined}
        >
          {f.title}
        </a>
      ))}
    </nav>
    {totalCount !== undefined && (
      <span class="filters-count">{totalCount}</span>
    )}
  </Wrapper>
</div>

<style>
  .filters-bar {
    position: sticky;
    top: 0;
    z-index: 10;
    padding: var(--ids__space-s) 0;
    background: var(--ids__bg-page);
    border-bottom: 1px solid var(--ids__border-subtle);
  }

  .filters-bar :global(.ids__wrapper) {
    display: flex;
    align-items: center;
    gap: var(--ids__space-s);
  }

  .filters {
    display: flex;
    flex-wrap: nowrap;
    gap: var(--ids__space-2xs);
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    display: flex;
    align-items: center;
    gap: var(--ids__space-2xs);
    padding: var(--ids__space-xs) var(--ids__space-s);
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-medium);
    color: var(--ids__text-secondary);
    background: transparent;
    border: none;
    border-radius: var(--ids__radius-s);
    text-decoration: none;
    white-space: nowrap;
    transition: 
      color var(--ids__transition-fast),
      background var(--ids__transition-fast);
  }

  .filter:hover {
    color: var(--ids__text-primary);
    background: var(--ids__bg-surface);
    text-decoration: none;
  }

  .filter--active {
    color: var(--ids__text-primary);
    background: var(--ids__bg-surface);
    font-weight: var(--ids__font-weight-semibold);
  }

  .filters-count {
    flex-shrink: 0;
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-bold);
    color: var(--ids__text-muted);
    margin-left: auto;
  }
</style>
