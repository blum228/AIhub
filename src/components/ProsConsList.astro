---
/**
 * Список плюсов и минусов
 * Двухколоночный layout в стиле IDS
 */
interface Props {
  pros: string[];
  cons: string[];
  class?: string;
}

const { pros, cons, class: className } = Astro.props;
const classes = ['ids__pros-cons', className].filter(Boolean).join(' ');
---

<div class={classes}>
  <div class="ids__pros-cons-col ids__pros-cons-col--pros">
    <h4 class="ids__pros-cons-title">
      <span class="ids__pros-cons-icon">✓</span>
      Плюсы
    </h4>
    <ul class="ids__pros-cons-list">
      {pros.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
  
  <div class="ids__pros-cons-col ids__pros-cons-col--cons">
    <h4 class="ids__pros-cons-title">
      <span class="ids__pros-cons-icon">✗</span>
      Минусы
    </h4>
    <ul class="ids__pros-cons-list">
      {cons.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</div>

<style>
  .ids__pros-cons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--ids__space-l);
  }

  @media (width < 600px) {
    .ids__pros-cons {
      grid-template-columns: 1fr;
      gap: var(--ids__space-m);
    }
  }

  .ids__pros-cons-col {
    padding: var(--ids__space-m);
    border-radius: var(--ids__radius-s);
  }

  .ids__pros-cons-col--pros {
    background-color: rgba(0, 180, 90, 0.06);
  }

  .ids__pros-cons-col--cons {
    background-color: rgba(var(--ids__accent-RGB), 0.06);
  }

  .ids__pros-cons-title {
    display: flex;
    align-items: center;
    gap: var(--ids__space-xs);
    margin: 0 0 var(--ids__space-s) 0;
    font-size: var(--ids__font-size-body);
    font-weight: var(--ids__font-weight-bold);
  }

  .ids__pros-cons-col--pros .ids__pros-cons-title {
    color: var(--ids__success);
  }

  .ids__pros-cons-col--cons .ids__pros-cons-title {
    color: var(--ids__accent);
  }

  .ids__pros-cons-icon {
    font-size: var(--ids__font-size-small);
  }

  .ids__pros-cons-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ids__pros-cons-list li {
    position: relative;
    padding-left: var(--ids__space-m);
    margin-bottom: var(--ids__space-xs);
    font-size: var(--ids__font-size-small);
    line-height: var(--ids__line-height-snug);
    color: var(--ids__text-primary);
  }

  .ids__pros-cons-list li::before {
    position: absolute;
    left: 0;
    content: '·';
    font-weight: var(--ids__font-weight-bold);
  }

  .ids__pros-cons-col--pros .ids__pros-cons-list li::before {
    color: var(--ids__success);
  }

  .ids__pros-cons-col--cons .ids__pros-cons-list li::before {
    color: var(--ids__accent);
  }
</style>
