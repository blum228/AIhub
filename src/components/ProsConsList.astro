---
/**
 * Список плюсов и минусов
 * Двухколоночный layout в стиле IDS
 */
interface Props {
  pros: string[];
  cons: string[];
  class?: string;
}

const { pros, cons, class: className } = Astro.props;
const classes = ['aigh__pros-cons', className].filter(Boolean).join(' ');
---

<div class={classes}>
  <div class="aigh__pros-cons-col aigh__pros-cons-col--pros">
    <h4 class="aigh__pros-cons-title">
      <span class="aigh__pros-cons-icon">✓</span>
      Плюсы
    </h4>
    <ul class="aigh__pros-cons-list">
      {pros.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
  
  <div class="aigh__pros-cons-col aigh__pros-cons-col--cons">
    <h4 class="aigh__pros-cons-title">
      <span class="aigh__pros-cons-icon">✗</span>
      Минусы
    </h4>
    <ul class="aigh__pros-cons-list">
      {cons.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</div>

<style>
  .aigh__pros-cons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: calc(var(--ids__density) * 1.5em);
  }

  @media (width < 600px) {
    .aigh__pros-cons {
      grid-template-columns: 1fr;
      gap: calc(var(--ids__density) * 1em);
    }
  }

  .aigh__pros-cons-col {
    padding: calc(var(--ids__density) * 1em);
    border-radius: 0.5em;
  }

  .aigh__pros-cons-col--pros {
    background-color: rgba(0, 180, 90, 0.06);
  }

  .aigh__pros-cons-col--cons {
    background-color: rgba(var(--ids__accent-RGB), 0.06);
  }

  .aigh__pros-cons-title {
    display: flex;
    align-items: center;
    gap: 0.4em;
    margin: 0 0 0.8em 0;
    font-size: 1em;
    font-weight: 600;
  }

  .aigh__pros-cons-col--pros .aigh__pros-cons-title {
    color: rgb(0, 140, 70);
  }

  .aigh__pros-cons-col--cons .aigh__pros-cons-title {
    color: var(--ids__accent);
  }

  .aigh__pros-cons-icon {
    font-size: 0.9em;
  }

  .aigh__pros-cons-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .aigh__pros-cons-list li {
    position: relative;
    padding-left: 1.2em;
    margin-bottom: 0.5em;
    font-size: 0.95em;
    line-height: 1.4;
    color: rgba(var(--ids__text-RGB), 0.85);
  }

  .aigh__pros-cons-list li::before {
    position: absolute;
    left: 0;
    content: '·';
    font-weight: bold;
  }

  .aigh__pros-cons-col--pros .aigh__pros-cons-list li::before {
    color: rgb(0, 140, 70);
  }

  .aigh__pros-cons-col--cons .aigh__pros-cons-list li::before {
    color: var(--ids__accent);
  }
</style>
