---
/**
 * Главная страница AIGirlsHub
 * 
 * СИСТЕМА ОТСТУПОВ:
 * - section + section = margin-top на секции (большой ритм)
 * - внутри секции: заголовок → контент (малый ритм через margin-bottom)
 */
import { getCollection } from 'astro:content';
import SiteLayout from '../layouts/SiteLayout.astro';
import Wrapper from '../components/Wrapper.astro';
import { url } from '../utils/url';

// Получаем модели
const allModels = await getCollection('models');
const models = allModels.map(entry => ({ 
  slug: entry.id.replace('.yaml', ''), 
  ...entry.data 
}));

// Группируем по мотивациям
const motivationCounts = {
  intimacy: models.filter(m => m.motivation === 'intimacy' || m.motivationSupport?.includes('intimacy')).length,
  escapism: models.filter(m => m.motivation === 'escapism' || m.motivationSupport?.includes('escapism')).length,
  connection: models.filter(m => m.motivation === 'connection' || m.motivationSupport?.includes('connection')).length,
};

// Мотивации с SVG иконками
const motivations = [
  {
    id: 'intimacy',
    title: 'Интим',
    description: 'Флирт, романтика, NSFW',
    count: motivationCounts.intimacy,
    href: url('/for/intimacy'),
    icon: url('/images/icons/intimacy.svg'),
  },
  {
    id: 'escapism',
    title: 'Эскапизм',
    description: 'Ролевые игры, фантазии',
    count: motivationCounts.escapism,
    href: url('/for/escapism'),
    icon: url('/images/icons/escapism.svg'),
  },
  {
    id: 'connection',
    title: 'Связь',
    description: 'Поддержка, дружба',
    count: motivationCounts.connection,
    href: url('/for/connection'),
    icon: url('/images/icons/connection.svg'),
  },
];

// FAQ
const faqItems = [
  { 
    q: 'Что такое AI-девушка?', 
    a: 'Виртуальный компаньон на базе нейросетей. Она умеет общаться, запоминать контекст, поддерживать разговор и адаптироваться под твои предпочтения.' 
  },
  { 
    q: 'Это безопасно?', 
    a: 'Да. Все сервисы в каталоге используют шифрование данных. Мы проверяем политику конфиденциальности каждого сервиса.' 
  },
  { 
    q: 'Сколько это стоит?', 
    a: 'От $0 до $20/мес. Многие сервисы предлагают бесплатный тариф с ограничениями или пробный период.' 
  },
  { 
    q: 'Можно ли общаться на русском?', 
    a: 'Большинство AI понимают русский язык. В карточке каждого сервиса указано, есть ли полноценная поддержка русского.' 
  },
];

// Schema.org
const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'AIGirlsHub',
  url: 'https://aigirlshub.ru',
};
---

<SiteLayout 
  title="AIGirlsHub — Каталог AI-девушек 2025"
  description="Найди идеальную AI-девушку. Обзоры, рейтинги и сравнения лучших AI-компаньонов."
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} slot="head" is:inline />

  <div class="page">
    
    <!-- HERO -->
    <section class="hero">
      <Wrapper>
        <p class="hero__huge">Каталог AI-девушек</p>
        <p class="hero__sub">{models.length} сервисов · обзоры · сравнения</p>
      </Wrapper>
    </section>

    <!-- GOALS -->
    <section id="goals" class="section">
      <Wrapper>
        <h2>Что ищешь?</h2>
        
        <nav class="goals">
          {motivations.map((m) => (
            <a href={m.href} class="goal">
              <img src={m.icon} alt="" class="goal__icon" />
              <span class="goal__title">{m.title}</span>
              <span class="goal__desc">{m.description}</span>
              <span class="goal__count">{m.count} сервисов</span>
            </a>
          ))}
        </nav>
      </Wrapper>
    </section>

    <!-- FAQ -->
    <section class="section">
      <Wrapper>
        <h2>Частые вопросы</h2>
        
        <div class="faq-list">
          {faqItems.map((item, index) => (
            <details class="faq-item" open={index === 0}>
              <summary class="faq-item__q">{item.q}</summary>
              <p class="faq-item__a">{item.a}</p>
            </details>
          ))}
        </div>
      </Wrapper>
    </section>

  </div>
</SiteLayout>


<style>
  /* РИТМ: section margin-top создаёт вертикальный ритм */
  
  .page {
    padding-bottom: var(--ids__space-l);
  }

  .section {
    margin-top: var(--ids__space-xl);
  }

  .section h2 {
    margin-bottom: var(--ids__space-2xs);
  }

  .section__lead {
    color: var(--ids__text-secondary);
    margin-bottom: var(--ids__space-m);
  }

  /* HERO — IDS style */
  .hero {
    margin-top: var(--ids__space-xl);
  }

  .hero__huge {
    font-size: 3em;
    line-height: 1.1;
    font-weight: 600;
    margin-bottom: var(--ids__space-xs);
  }

  @media (width < 768px) {
    .hero__huge {
      font-size: 2em;
    }
  }

  .hero__sub {
    font-size: var(--ids__font-size-body);
    color: var(--ids__text-secondary);
    margin-bottom: 0;
  }

  /* GOALS */
  .goals {
    display: flex;
    gap: 0;
    margin-top: var(--ids__space-m);
  }

  .goal {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: var(--ids__space-m);
    border: 1px solid var(--ids__border-default);
    border-right: 0;
    text-decoration: none;
    color: inherit;
    transition: 
      background var(--ids__transition-fast),
      border-color var(--ids__transition-fast);
  }

  .goal:first-child {
    border-radius: var(--ids__radius-l) 0 0 var(--ids__radius-l);
  }

  .goal:last-child {
    border-radius: 0 var(--ids__radius-l) var(--ids__radius-l) 0;
    border-right: 1px solid var(--ids__border-default);
  }

  .goal:hover {
    background: var(--ids__bg-surface);
    border-color: var(--ids__border-strong);
    text-decoration: none;
  }

  .goal:hover + .goal {
    border-left-color: var(--ids__border-strong);
  }

  .goal__icon {
    width: 1.5em;
    height: 1.5em;
    margin-bottom: var(--ids__space-s);
    opacity: 0.5;
  }

  .goal__title {
    font-size: var(--ids__font-size-h3);
    font-weight: var(--ids__font-weight-bold);
    margin-bottom: var(--ids__space-2xs);
  }

  .goal__desc {
    font-size: var(--ids__font-size-small);
    color: var(--ids__text-secondary);
  }

  .goal__count {
    font-size: var(--ids__font-size-micro);
    color: var(--ids__text-muted);
    margin-top: auto;
    padding-top: var(--ids__space-s);
  }

  @media (width < 768px) {
    .goals {
      flex-direction: column;
    }

    .goal {
      border-right: 1px solid var(--ids__border-default);
      border-bottom: 0;
    }

    .goal:first-child {
      border-radius: var(--ids__radius-l) var(--ids__radius-l) 0 0;
    }

    .goal:last-child {
      border-radius: 0 0 var(--ids__radius-l) var(--ids__radius-l);
      border-bottom: 1px solid var(--ids__border-default);
    }

    .goal:hover + .goal {
      border-top-color: var(--ids__border-strong);
    }
  }

  /* FAQ */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--ids__space-2xs);
    margin-top: var(--ids__space-m);
  }

  .faq-item {
    padding: var(--ids__space-s) var(--ids__space-m);
    background: var(--ids__bg-surface);
    border-radius: var(--ids__radius-s);
    cursor: pointer;
  }

  .faq-item[open] {
    background: var(--ids__bg-surface-hover);
  }

  .faq-item__q {
    font-size: var(--ids__font-size-small);
    font-weight: var(--ids__font-weight-semibold);
    list-style: none;
  }

  .faq-item__q::-webkit-details-marker {
    display: none;
  }

  .faq-item__q::before {
    content: '+';
    display: inline-block;
    width: 1.2em;
    color: var(--ids__text-muted);
  }

  .faq-item[open] .faq-item__q::before {
    content: '−';
  }

  .faq-item__a {
    font-size: var(--ids__font-size-small);
    color: var(--ids__text-secondary);
    line-height: var(--ids__line-height-relaxed);
    margin-top: var(--ids__space-xs);
    margin-bottom: 0;
    padding-left: 1.2em;
  }

</style>
